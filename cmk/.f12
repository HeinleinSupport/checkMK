set -e

SITE=${SITE:-$(until [ "${PWD}" = / ]; do if [ -e .site ]; then
    cat .site
    break
else cd ..; fi; done)}
SITE=${SITE:-$(omd sites --bare | head -n 1)}
ROOT=/omd/sites/$SITE
test -d "${ROOT}" || exit 1

CMK_VERSION_DIR=$(basename "$(readlink "$ROOT"/version)")
# CMK_VERSION=${CMK_VERSION_DIR%.*}
CMK_EDITION=${CMK_VERSION_DIR##*.}

echo "Update site $SITE..."

echo "Copy files..."
rsync \
    --exclude="*.pyc" \
    --exclude="flycheck*" \
    --exclude="__pycache__" \
    --exclude ".mypy_cache" \
    --delete-after \
    -rlDR \
    . \
    "$ROOT"/lib/python3/cmk/

# cloud stuff is only in cloud (not sure if this suffices to fake a "real" cloud).
if [ "$CMK_EDITION" != "cloud" ]; then
    find "${ROOT}/lib/python3" -regex '.*/cloud*' -print0 | xargs --null rm -rf
fi

# Edition hierarchy: community < pro < ultimate < ultimatemt
# cloud includes pro and ultimate functionality
if [ "$CMK_EDITION" != "ultimatemt" ]; then
    find "${ROOT}/lib/python3" -regex '.*/ultimatemt*' -print0 | xargs --null rm -rf
    if [ "$CMK_EDITION" != "ultimate" ] && [ "$CMK_EDITION" != "cloud" ]; then
        find "${ROOT}/lib/python3" -regex '.*/ultimate*' -print0 | xargs --null rm -rf
        if [ "$CMK_EDITION" != "pro" ]; then
            find "${ROOT}/lib/python3" -regex '.*/pro*' -print0 | xargs --null rm -rf
        fi
    fi
fi

if [ -z "${ONLY_COPY}" ]; then
    (
        cd "$ROOT"/lib/python3/cmk
        "$ROOT"/bin/python3 -m compileall -qq .
    )
fi
